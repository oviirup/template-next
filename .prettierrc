{
  "arrowParens": "always",
  "bracketSameLine": true,
  "importOrder": [
    "<BUILTIN_MODULES>",
    "^(react|next)(.*)?$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./]",
    "<TYPES>"
  ],
  "plugins": [
    "prettier-plugin-pkg",
    "prettier-plugin-imports",
    "prettier-plugin-jsdoc",
    "prettier-plugin-tailwindcss"
  ],
  "printWidth": 80,
  "quoteProps": "consistent",
  "semi": true,
  "tailwindFunctions": ["clsx", "cn", "cva"],
  "tailwindStylesheet": "src/styles/globals.css",
  "trailingComma": "all"
}
