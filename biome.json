{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!**/*.min.*"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "bracketSameLine": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off"
      },
      "suspicious": {
        "noConsole": {
          "fix": "safe",
          "level": "warn",
          "options": { "allow": ["warn", "error", "info", "assert"] }
        },
        "noExplicitAny": "off",
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": { "functions": ["cva", "tv", "cn", "cx"] }
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "css": {
    "parser": { "tailwindDirectives": true }
  },
  "assist": {
    "actions": { "source": { "organizeImports": "on" } }
  }
}
