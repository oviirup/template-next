{
  "name": "next-template",
  "version": "1.0.7",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "npx rimraf .next .turbo out",
    "dev": "next dev --turbo",
    "format": "prettier . -wu --cache",
    "format:check": "prettier . -cu",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "start": "next start",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "@oviirup/envalid": "~0.1.3",
    "class-variance-authority": "~0.7.1",
    "lucide-react": "~0.544.0",
    "next": "~15.5.3",
    "next-themes": "~0.4.6",
    "radix-ui": "~1.4.3",
    "react": "~19.1.1",
    "react-dom": "~19.1.1",
    "sharp": "~0.34.4",
    "sonner": "~2.0.7",
    "tailwind-merge": "~3.3.1",
    "zod": "~4.1.11"
  },
  "devDependencies": {
    "@oviirup/sprite": "~0.1.13",
    "@tailwindcss/postcss": "~4.1.13",
    "@types/bun": "~1.2.22",
    "@types/react": "~19.1.13",
    "@types/react-dom": "~19.1.9",
    "babel-plugin-react-compiler": "~19.1.0-rc.3",
    "eslint": "~9.36.0",
    "eslint-config-next": "~15.5.3",
    "eslint-plugin-only-warn": "~1.1.0",
    "eslint-plugin-react-compiler": "~19.1.0-rc.2",
    "husky": "~9.1.7",
    "lint-staged": "~16.1.6",
    "postcss": "~8.5.6",
    "prettier": "~3.6.2",
    "prettier-plugin-imports": "~4.3.3",
    "prettier-plugin-jsdoc": "~1.3.3",
    "prettier-plugin-pkg": "~0.21.2",
    "prettier-plugin-tailwindcss": "~0.6.14",
    "tailwindcss": "~4.1.13",
    "tailwindcss-pluggables": "~1.2.0",
    "typescript": "~5.9.2"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md,mdx,yaml,gql,html}": [
      "prettier --write"
    ]
  },
  "sprite": [
    "src/*.sprite.json"
  ]
}
